{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Series Specification",
  "type": "object",
  "properties": {
    "series_title": { "type": "string" },
    "number_of_essays": { "type": "integer" },
    "essays": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "concept": { "type": "string" }
        },
        "required": ["title", "concept"]
      }
    }
  },
  "required": ["series_title", "essays"]
}
